RewriteEngine On

# Allow direct access to includes directory for API endpoints
RewriteCond %{REQUEST_URI} ^/includes/ [NC]
RewriteRule ^ - [L]

RewriteCond %{THE_REQUEST} ^[A-Z]+\ /public/ [NC]
RewriteRule ^ - [F,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)\.php$ /$1 [R=301,L]

RewriteRule ^$ public/index.php [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/public/%{REQUEST_URI}.php -f
RewriteRule ^(.+)$ public/$1.php [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)$ public/index.php [L]