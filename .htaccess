RewriteEngine On

# --- Skip rewrite for real files and directories ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --- Redirect /public/... to root (clean URLs) ---
RewriteCond %{REQUEST_URI} ^/public/(.*)$
RewriteRule ^public/(.*)$ /$1 [R=301,L]

# --- Redirect /something.php → /something (for cleaner URLs) ---
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[\s?]
RewriteRule ^ %1 [R=301,L]

# --- Internally serve /something from /public/something.php ---
RewriteCond %{DOCUMENT_ROOT}/public/$1.php -f
RewriteRule ^(.+)$ public/$1.php [L]

# --- Serve root → /public/index.php ---
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ public/index.php [L]
